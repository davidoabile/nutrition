<script type="text/javascript">
    function blockShow(selectId, blockId)
    {
        jQblvg(selectId).live('change',function() {
            console.log('s');
            var value   = jQblvg(this).val();
            if (value=='0' || value=='') {
                jQblvg('#sortable '+blockId).hide();
            }else{
                jQblvg('#sortable '+blockId).show();
            }
        });
    }
    jQblvg(document).ready(function() {
        blockShow('#category_rows', '#b1');
        blockShow('#categories_list', '#b2');
        blockShow('#category_last_product', '#b3');
        blockShow('#category_static_block_id', '#b4');
        blockShow('#category_template', '#b5');
        jQblvg('#use_default_store_view').live('click',function() {
            if (jQblvg(this).is(':checked')) {
                jQblvg('#category_ddmenu_settings select').attr('disabled', true);
                jQblvg('#category_ddmenu_settings input').attr('disabled', true);
                jQblvg('#sortable').hide();
            } else {
                jQblvg('#category_ddmenu_settings select').attr('disabled', false);
                jQblvg('#category_ddmenu_settings input').attr('disabled', false);
                jQblvg('#sortable').show();
            }
        });
    });
</script>