                    <?php echo $groupValue['weight'] . $measureUnit; ?> / <?php echo $groupValue['orders']?>
                <?php else:?>
                    0
                <?php endif;?>
            </strong>
        <?php endforeach;?>
    <?php else: ?>
        <?php $weightData = $this->_getWeightData() ?>
        <?php echo Mage::helper('moogento_shipeasy')->__('Weights/orders');?>:
        &nbsp;<strong><?php echo round($weightData['weight'], 2) . $measureUnit; ?> / <?php echo $weightData['orders']?></strong>
    <?php endif; ?>

</div>
</div>

