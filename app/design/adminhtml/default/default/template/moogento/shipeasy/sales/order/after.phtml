 $measureUnit = $this->_getMeasureUnit(); ?>
<div id="moogento_weight_report">
<div class="moogento-weight">
    <?php if (Mage::helper('moogento_core')->isInstalled('Moogento_CourierRules')): ?>
        <?php foreach($this->_getCountryGroups() as $groupTitle => $groupValue): ?>
            &nbsp; &nbsp;<?php echo $groupTitle; ?>:<strong>&nbsp;
