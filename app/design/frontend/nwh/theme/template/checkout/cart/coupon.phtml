<form id="discount-coupon-form" action="<?php echo $this->getUrl('checkout/cart/couponPost') ?>" method="post">
    <div class="discount">
        <div class="cart_hadd"><?php echo $this->__('PROMO CODE') ?></div>
        <div class="discount-form">
            <div class="left font12_gry"><?php echo $this->__('Only one coupon can be applied per order.') ?></div>
            <div class="right">
<div class="codearea">
                    <input type="hidden" name="remove" id="remove-coupone" value="0" />

                    
                   
                   
                    <?php if (strlen($this->getCouponCode())): ?>
                       <button type="button" title="<?php echo $this->__('Cancel Coupon') ?>" class="red_btn" onclick="discountForm.submit(true)" value="<?php echo $this->__('Cancel Coupon') ?>"><?php echo $this->__('CANCEL') ?></button>
                                            <?php else: ?>
                                            
                                            <button type="button" title="<?php echo $this->__('REDEEM') ?>" class="red_btn" onclick="discountForm.submit(false)" value="<?php echo $this->__('REDEEM') ?>"><span><span><?php echo $this->__('REDEEM') ?></span></span></button>
                                            
                                <?php endif; ?>
                                
                          <input class="code_field" id="coupon_code" name="coupon_code" value="<?php echo $this->escapeHtml($this->getCouponCode()) ?>" />       
                                

                </div>

            </div>


        </div>
    </div>
</form>
<script type="text/javascript">
//<![CDATA[
    var discountForm = new VarienForm('discount-coupon-form');
    discountForm.submit = function(isRemove) {
        if (isRemove) {
            $('coupon_code').removeClassName('required-entry');
            $('remove-coupone').value = "1";
        } else {
            $('coupon_code').addClassName('required-entry');
            $('remove-coupone').value = "0";
        }
        return VarienForm.prototype.submit.bind(discountForm)();
    }
//]]>
</script>
