<script type="text/javascript">
    document.observe("dom:loaded", function() {
        var locations = '<?php echo $this->getLocations()->toJson(); ?>';
        var search = new Locator.Search();
        var map = new Locator.Map($$('.loc-page-map').first());

        locations = search.parseLocationsJson(locations);
        map.renderLocations(locations);
    });
</script>
