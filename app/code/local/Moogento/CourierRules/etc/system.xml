<?xml version="1.0"?>
<config>
    <tabs>
        <moogento translate="label comment">
            <label>
                <![CDATA[<img src="//moogento.com/logo/moogento_tinylogo.lp.png" alt="Moogento" width="20" style="vertical-align:bottom;margin-left:-1px;"/> MOOGENTO Extensions
                ]]>
            </label>
            <sort_order>200</sort_order>
        </moogento>
    </tabs>
    <sections>
        <courierrules_rules translate="label" module="moogento_courierrules">
            <label><![CDATA[courierRules]]></label>
			<header_css>moogento-header</header_css>
            <tab>moogento</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <frontend_type>text</frontend_type>
            <groups>
                <courierrules_rules_settings translate="label">
                    <frontend_model>moogento_courierrules/adminhtml_configuration_rules</frontend_model>
                    <label>Courier Rules Settings</label>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                </courierrules_rules_settings>
                <action_menu translate="label">
                    <label>Action Menu Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <process_courier_rules translate="label comment" module="moogento_courierrules">
                            <label>Show "Process Courier Rules" ?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>moogento_courierrules/yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </process_courier_rules>
                        <set_cr_method translate="label comment" module="moogento_courierrules">
                            <label>Show "cR Set courierRules Method" ?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>moogento_courierrules/yesno</source_model>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </set_cr_method>
                        <print_raw_connector_label translate="label comment" module="moogento_courierrules">
                            <label>Show "Print Raw Connector Label" ?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>moogento_courierrules/yesno</source_model>
                            <sort_order>300</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </print_raw_connector_label>
                    </fields>
                </action_menu>

                <!-- END ACTION MENU -->
            </groups>
        </courierrules_rules>
        <courierrules_connectors translate="label" module="moogento_courierrules">
            <label><![CDATA[<div class="sub_module">- Shipping Connectors</div>]]></label>
            <tab>moogento</tab>
            <sort_order>1200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <frontend_model>moogento_courierrules/adminhtml_configuration_connectors</frontend_model>
        </courierrules_connectors>
        <courierrules_zones translate="label" module="moogento_courierrules">
            <label><![CDATA[<div class="sub_module">- Shipping Zones</div>]]></label>
            <tab>moogento</tab>
            <sort_order>2000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <frontend_model>moogento_courierrules/adminhtml_configuration_zones</frontend_model>
        </courierrules_zones>
        <courierrules_tracking translate="label" module="moogento_courierrules">
            <label><![CDATA[<div class="sub_module">- Tracking Pool</div>]]></label>
            <tab>moogento</tab>
            <sort_order>3000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <frontend_model>moogento_courierrules/adminhtml_configuration_tracking</frontend_model>
        </courierrules_tracking>
    </sections>
</config>